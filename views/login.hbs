<!-- Section: Design Block -->
<section class=" bg-white vh-100">
    <!-- Background image -->
    <div class="container h-100 d-flex justify-content-center align-items-center">

        <div class="card w-100 mx-4 mx-md-5 shadow text-dark" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.172);
        backdrop-filter: blur(30px);
        ">
            <div class="card-body py-5 px-md-5">

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="fw-bold mb-5 d-flex justify-content-center">Login</h2>
                        <div id="errorMessage">
                            {{#if error}}
                            <div class="alert alert-warning" role="alert">{{error}}
                                <div class="close" style="cursor:pointer" onclick="clearErrorMessage()">X</div>
                            </div>
                            {{/if}}
                        </div>
                        <form action="/loginUser" method="post" id="form">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <!-- Email input -->
                            <div class="form-outline mb-1">
                                <input type="email" value="abcdefg@gamil.com" name="email" id="email" class="form-control" />
                                <label class="form-label pt-2" for="email">Email address</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-1">
                                <input type="password" value="vyshnav@12345" name="password" id="password" class="form-control" />
                                <label class="form-label pt-2" for="password">Password</label>
                                <div>
                                    <input type="checkbox" name="showPassword" id="showPassword" class="" />
                                    <label class="form-label pt-2" for="confirmPassword">Show Password</label>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-1">
                                Login
                            </button>
                            <div class=" mb-1">
                                <div>
                                    <label class="form-label pt-2" for="confirmPassword">don't have an account? </label>
                                    <a href="/signup">
                                        <label class="form-label pt-2 text-white" style="cursor: pointer;"
                                            for="confirmPassword">Signup</label>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/javascripts/userLoginValidation.js"></script>
<!-- Section: Design Block -->